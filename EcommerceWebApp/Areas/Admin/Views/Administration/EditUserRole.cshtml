@model EcommerceWebApp.Models.RoleModel

@{
    ViewData["Title"] = "EditUserRole";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header bg-info">
                    <h4 class="text-white font-weight-bold">Edit Role</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Administration" asp-area="Admin" asp-action="EditUserRole" class="form-horizontal">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <h5>User Email : @Model.ApplicationUser.Email</h5>
                                    <input asp-for="@Model.ApplicationUser.Id" class="form-control" hidden />
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    @for (int i = 0; i < Model.ApplicationUserRole.Count; i++)
                                    {
                                        <input asp-for="@Model.ApplicationUserRole[i].Value" class="form-control" hidden />
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="@Model.ApplicationUserRole[i].Selected">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                @Model.ApplicationUserRole[i].Text
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-block btn-info"><span><i class="fas fa-save"></i></span> Update</button>
                            </div>
                            <div class="col-sm-6">
                                <a class="btn btn-block btn-secondary" asp-controller="Administration" asp-area="Admin" asp-action="ManageRole"><span><i class="fas fa-arrow-left"></i></span> User List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

