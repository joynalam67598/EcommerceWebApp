@model EcommerceWebApp.Models.RoleModel

@{
    ViewData["Title"] = "AddRole";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (ViewBag.status != "")
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations!</strong>@ViewBag.status<br />
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-primary">Add Category</h4>
                    <a class="float-right" asp-controller="Administration" asp-area="Admin" asp-action="ManageRole">Role List</a>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Administration" asp-area="Admin" asp-action="AddRole" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="RoleName" class="col-sm-3"></label>
                            <div class="col-sm-9">
                                <input asp-for="RoleName" class="form-control" required />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-9 offset-sm-3">
                            <input type="submit" value="Create Role" class="btn btn-block btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

