@model IEnumerable<EcommerceWebApp.Models.UserModel>

@{
    ViewData["Title"] = "ManageRole";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-success">All User</h4>
                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                </div>
                <div class="card-body text-center">
                    <div class="table-responsive">
                        <table id="example1" class="table table-hover table-striped table-bordered">
                            <tr>
                                <th>SL NO.</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                            @{ int coutn = 0;
                                foreach (var user in Model)
                                {
                                    coutn = coutn + 1;
                                                        <tr>
                                                            <td>@coutn</td>
                                                            <td>@user.FirstName @user.LastName </td>
                                                            <td>@user.Role </td>
                                                            <td>@user.Email</td>
                                                            <td>
                                                                <a asp-controller="Administration" asp-area="Admin" asp-action="EditUserRole" asp-route-Id="@user.Id" class="btn btn-primary btn-xs" title="Edit">
                                                                    <span class="fa fa-edit"></span>
                                                                </a>
                                                                <a onclick="return confirm('Do you want to delete this record?')" asp-controller="Administration" asp-area="Admin" asp-action="Delete" asp-route-Id="@user.Id" class="btn btn-danger btn-xs" title="Delete">
                                                                    <span class="fa fa-trash"></span>
                                                                </a>
                                                            </td>
                                                        </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



