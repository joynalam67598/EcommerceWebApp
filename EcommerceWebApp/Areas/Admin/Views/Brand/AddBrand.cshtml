@model EcommerceWebApp.Models.BrandModel

@{
    ViewData["Title"] = "AddBrand";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (ViewBag.isSuccess == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations!</strong> You have added new brand successfully.
                </div>
            }
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-primary">Add Category</h4>
                    <a class="float-right" asp-controller="Home" asp-area="Admin" asp-action="Index">Back to Home</a>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Brand" asp-area="Admin" asp-action="AddBrand" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="BrandName" class="col-sm-3"></label>
                                <div class="col-sm-9">
                                    <input asp-for="BrandName" class="form-control" required />
                                    <span asp-validation-for="BrandName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-9 offset-3">
                                <input type="submit" value="Save" class="btn btn-block btn-primary" />
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>


