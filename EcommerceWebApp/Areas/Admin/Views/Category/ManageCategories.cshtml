@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "ManageCategories";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-success">Categories Table</h4>
                </div>
                <div class="card-body text-center">
                    <div class="table-responsive">
                        <table id="example1" class="table table-hover table-striped table-bordered">
                            <tr>
                                <th>SL NO.</th>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                            @{ int coutn = 0;
                                foreach (var categroy in Model)
                                {
                                    coutn = coutn + 1;
                                    <tr>
                                        <td>@coutn</td>
                                        <td>@categroy.CategoryName</td>
                                        <td>
                                            <a href="" class="btn btn-warning btn-xs" title="View Details">
                                                <span class="fa fa-search-plus"></span>
                                            </a>
                                            <a href="" class="btn btn-primary btn-xs" title="Edit">
                                                <span class="fa fa-edit"></span>
                                            </a>
                                            <a href="" class="btn btn-danger btn-xs" title="Delete">
                                                <span class="fa fa-trash"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

