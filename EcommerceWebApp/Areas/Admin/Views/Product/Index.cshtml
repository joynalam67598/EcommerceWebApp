@model IEnumerable<EcommerceWebApp.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @if (ViewBag.status != "")
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations!</strong>@ViewBag.status<br />
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-success">All Prodcuts</h4>
                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                </div>
                <div class="card-body text-center">
                    <div class="table-responsive">
                        <table id="example1" class="table table-hover table-striped table-bordered">
                            <tr>
                                <th>SL NO.</th>
                                <th>Category Name</th>
                                <th>brand Name</th>
                                <th>Product Name</th>
                                <th>Product Code</th>
                                <th>Available</th>
                                <th>Buying Price</th>
                                <th>Selling Price</th>
                                <th>Status</th>
                                <th>Last Stock In</th>
                                <th>Action</th>
                            </tr>
                            @{ int coutn = 0;
                                foreach (var product in Model)
                                {
                                    coutn = coutn + 1;
                                    <tr>
                                        <td>@coutn</td>
                                        <td>@product.CategoryName</td>
                                        <td>@product.BrandName</td>
                                        <td>@product.ProductName</td>
                                        <td>@product.ProductCode</td>
                                        <td>@product.AvailableQuantity</td>
                                        <td>@product.BuyingPrice</td>
                                        <td>@product.SellingPrice</td>
                                        <td>@((product.Status) ? "Available" : "Out of Stock")</td>
                                        <td>@product.StockInDate</td>
                                        <td>
                                            <a asp-controller="Product" asp-area="Admin" asp-action="Details" 
                                               asp-route-Id="@product.Id" class="btn btn-primary btn-xs" title="Details">
                                                <span class="fa fa-eye"></span>
                                            </a>
                                            <a asp-controller="Product" asp-area="Admin" asp-action="Edit" asp-route-Id="@product.Id"
                                               class="btn btn-primary btn-xs" title="Edit">
                                                <span class="fa fa-edit"></span>
                                            </a>
                                            <a onclick="return confirm('Do you want to delete this record?')" asp-controller="Product" 
                                               asp-area="Admin" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger btn-xs" title="Delete">
                                                <span class="fa fa-trash"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
